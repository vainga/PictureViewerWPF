        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="PaintWindow" Height="602" Width="400">
    <Grid>
        <Label Content="Размер:" HorizontalAlignment="Left" Margin="66,73,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.526,0.579"/>
        <TextBox Name="paintSize" HorizontalAlignment="Left" Margin="124,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Height="22"/>
        <xctk:ColorCanvas x:Name="colorCanvas" SelectedColorChanged="ColorCanvas_SelectedColorChanged" Margin="66,127,66,165"/>
        <Button Name="buttonDone" Content="Готово" HorizontalAlignment="Center" Margin="0,465,0,0" VerticalAlignment="Top" Height="54" Width="120" Click="Done_Click"/>
